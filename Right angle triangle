import java.util.*;
import java.io.*;
 class righttriangle
{
public static void main(String args[])
{
Scanner sc=new Scanner(System.in);
int i,j,n;
System.out.println("enter the n value");
n=sc.nextInt();
for(i=1;i<=n;i++)
{
System.out.println(" ");

for(j=1;j<=i;j++) 
{
System.out.print("*");
}
}
}
}
